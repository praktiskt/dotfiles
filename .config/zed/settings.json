{
  "features": {
    "inline_completion_provider": "none"
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "terminal": {
    "button": false,
    "font_family": "JetBrains Mono NL",
    "font_weight": 250,
    "working_directory": "current_project_directory",
    "line_height": "standard"
  },
  "active_pane_modifiers": {
    "border_size": 1,
    "inactive_opacity": 0.3
  },
  "assistant": {
    "enabled": true,
    "button": false,
    "default_model": {
      "provider": "openai",
      "model": "llama-3.1-70b-versatile"
    },
    "version": "2"
  },
  "language_models": {
    "openai": {
      "version": "1",
      "api_url": "https://api.groq.com/openai/v1",
      "low_speed_timeout_in_seconds": 600,
      "available_models": [
        {
          "name": "llama-3.1-70b-versatile",
          "display_name": "groq/llama-3.1-70b-versatile",
          "max_tokens": 8192
        }
      ]
    }
  },
  "base_keymap": "VSCode",
  "vim_mode": true,
  "wrap_guides": [88],
  "vim": {
    "use_system_clipboard": "never"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "ui_font_size": 16,
  "buffer_font_weight": 250,
  "buffer_font_size": 14,
  "buffer_font_family": "JetBrains Mono NL",
  "theme": "Catppuccin Mocha - No Italics",
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "file_types": {
    "Dockerfile": ["Dockerfile.*"]
  },
  "languages": {
    "Python": {
      "language_servers": ["basedpyright", "!pyright"],
      "formatter": {
        "external": {
          "command": "bash",
          "arguments": [
            "-c",
            "ruff check --select=I,F --exit-zero --fix --unsafe-fixes --stdin-filename {buffer_path} | ruff format --stdin-filename {buffer_path}"
          ]
        }
      }
    },
    "Go": {
      "formatter": [
        {
          "external": {
            "command": "goimports"
          }
        },
        {
          "external": {
            // go install mvdan.cc/gofumpt@latest
            "command": "gofumpt"
          }
        }
      ]
    },
    "Rust": {
      "formatter": [
        {
          "external": {
            "command": "rustfmt",
            "arguments": ["-"]
          }
        }
      ]
    },
    "Shell Script": {
      "formatter": [
        {
          "external": {
            // wget -O shfmt https://github.com/patrickvane/shfmt/releases/download/master/shfmt_linux_amd64
            "command": "shfmt",
            "arguments": ["-s", "-"]
          }
        }
      ]
    },
    "Markdown": {
      "formatter": [
        {
          "external": {
            // go install github.com/shurcooL/markdownfmt@latest
            "command": "markdownfmt"
          }
        }
      ]
    },
    "YAML": {
      "format_on_save": "language_server"
    }
  },
  "lsp": {
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "format": {
            "enable": true,
            "bracketSpacing": false
          }
        }
      }
    },
    "basedpyright": {
      "settings": {
        //"python": {
        //  "pythonPath": ".venv/bin/python"
        //},
        "basedpyright.analysis": {
          "diagnosticMode": "workspace",
          "inlayHints": {
            "callArgumentNames": false
          }
        }
      }
    }
  }
}
