{
  //"server_url": "http://localhost:8080",
  "auto_update": false,
  "soft_wrap": "editor_width",
  "features": {
    "inline_completion_provider": "none",
    "copilot": false
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": "never"
  },
  "notification_panel": {
    "button": false
  },
  "outline_panel": {
    "button": false
  },
  "terminal": {
    "button": false,
    "font_family": "Ubuntu Sans Mono",
    "font_weight": 400,
    "font_size": 16,
    "working_directory": "current_project_directory",
    "line_height": "standard",
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "auto_install_extensions": {
    "basedpyright": true,
    "catppuccin": true,
    "docker-compose": true,
    "dockerfile": true,
    "elixir": true,
    "gleam": true,
    "helm": true,
    "html": true,
    "java": true,
    "julia": true,
    "just": true,
    "kotlin": true,
    "lua": true,
    "make": true,
    "r": true,
    "rainbow-csv": true,
    "rose-pine-theme": true,
    "ruby": true,
    "ruff": true,
    "scala": true,
    "scm": true,
    "sql": true,
    "temp": true,
    "toml": true,
    "typos": true,
    "xml": true,
    "zig": true
  },
  "active_pane_modifiers": {
    "border_size": 1,
    "inactive_opacity": 0.3
  },
  "assistant": {
    "enabled": true,
    "button": false,
    "default_model": {
      "provider": "openai",
      "model": "deepseek-r1-distill-llama-70b"
    },
    "version": "2",
    "enable_experimental_live_diffs": true
  },
  "language_models": {
    "copilot_chat": null,
    "openai": {
      "version": "1",
      "api_url": "https://api.groq.com/openai/v1",
      "low_speed_timeout_in_seconds": 600,
      "available_models": [
        {
          "name": "llama-3.3-70b-versatile",
          "display_name": "groq/llama-3.3-70b-versatile",
          "max_tokens": 8192
        },

        {
          "name": "deepseek-r1-distill-llama-70b",
          "display_name": "groq/deepseek-r1-distill-llama-70b",
          "max_tokens": 8192
        }
      ]
    }
  },
  "base_keymap": "VSCode",
  "vim_mode": true,
  "wrap_guides": [88],
  "vim": {
    "use_system_clipboard": "never"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "tabs": {
    "git_status": true,
    "file_icons": true,
    "show_diagnostics": "errors"
  },
  "buffer_font_fallbacks": ["JetBrains Mono NL", "Cantarell"],
  "buffer_font_family": "Ubuntu Sans Mono",
  "buffer_font_size": null,
  "buffer_font_weight": 400,
  "buffer_line_height": "standard",
  "ui_font_family": "Ubuntu Sans Mono",
  "ui_font_size": 16,
  "ui_font_weight": 400,
  "unstable.ui_density": "compact",
  "project_panel": {
    "entry_spacing": "standard",
    "button": false,
    "indent_size": 24,
    "indent_guides": {
      "show": "always"
    },
    "default_width": 300
  },
  "theme": "Catppuccin Mocha",
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
    "selections_menu": false
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "file_types": {
    "Dockerfile": ["Dockerfile.*"],
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml"
    ]
  },
  "inlay_hints": {
    "enabled": true,
    "show_background": true
  },
  "unnecessary_code_fade": 0.7,
  "languages": {
    // Default: biome (JavaScript, TypeScript, JSX, TSX, JSON, CSS, GraphQL)
    // "formatter": {
    //   "language_server": {
    //     "name": "biome"
    //   }
    // },
    // "code_actions_on_format": {
    //   "source.fixAll.biome": true,
    //   "source.organizeImports.biome": true
    // },
    "Python": {
      "language_servers": ["basedpyright", "!pyright"],
      "formatter": {
        "external": {
          "command": "bash",
          "arguments": [
            "-c",
            "ruff check --select=ALL --ignore=T --exit-zero --fix --unsafe-fixes --stdin-filename {buffer_path} | ruff format --line-length=88 --stdin-filename {buffer_path}"
          ]
        }
      }
    },
    //"Rust": {
    //  "formatter": [
    //    {
    //      "external": {
    //        "command": "rustfmt"
    //        //"arguments": ["-"]
    //      }
    //    }
    //  ]
    //},
    "Shell Script": {
      "formatter": [
        {
          "external": {
            // wget -O shfmt https://github.com/patrickvane/shfmt/releases/download/master/shfmt_linux_amd64
            "command": "shfmt",
            "arguments": ["-s", "-"]
          }
        }
      ]
    },
    "Markdown": {
      "formatter": [
        {
          "external": {
            // go install github.com/shurcooL/markdownfmt@latest
            "command": "markdownfmt"
          }
        }
      ]
    },
    "YAML": {
      "format_on_save": "language_server"
    }
  },
  "lsp": {
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "format": {
            "enable": true,
            "bracketSpacing": false
          }
        }
      }
    },
    "basedpyright": {
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python"
        },
        "basedpyright.analysis": {
          "diagnosticMode": "workspace",
          "inlayHints": {
            "callArgumentNames": false
          }
        }
      }
    },
    "gopls": {
      "gofumpt": true,
      "initialization_options": {
        "gofumpt": true
      }
    },
    "typos": {
      "initialization_options": {
        "diagnosticSeverity": "Warning"
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "enable": "skip_trivial",
            "useParameterNames": true
          },
          "closureReturnTypeHints": {
            "enable": "always"
          }
        }
      }
    }
    // "biome": {
    //   "settings": {
    //     "require_config_file": true
    //   }
    // }
  }
}
